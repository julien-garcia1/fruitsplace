<div class="banner-products" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1573246123716-6b1782bfc499?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1860&q=80);">
<h1>Tableau de Bord </h1>
</div>
<br>
<br>
<div class="container">
<table class="table">

<h2>Mes produits</h2>
<thead>
    <tr>
      <th>Produits</th>
      <th>Catégorie</th>
      <th>Prix</th>
    </tr>
  </thead>

<tbody>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.category %></td>
    <td><%= product.price %> €</td>
    <td><%= link_to product_path(product), method: :delete, data: { confirm: "Are you sure?" } do %>
       <i class="fa fa-trash destroy_dose"></i>
     <% end %></td>
    <td><%= link_to 'Editer', edit_product_path(product) %></td>
  </tr>
  <% end %>
</tbody>
</table>

<p>
  <%= link_to 'Ajouter un produit', new_product_path, :class => "btn btn-primary btn-add" %>
</p>

<br>
<br>

<h2>Commandes Clients </h2>
<table class="table">
<thead>
    <tr>
      <th>Produit</th>
      <th>Catégorie</th>
      <th>Prix</th>
      <th>Status</th>
    </tr>
  </thead>

<tbody>
  <% current_user.products.map do |product| %>
  <% product.orders.each do |order| %>
  <tr>
    <td><%= order.product.name %></td>
    <td><%= order.product.category %></td>
    <td><%= order.product.price %> €</td>
    <td><%= order.status %> </td>
  </tr>
  <% end %>
  <% end %>
</tbody>
</table>
</div>
