<div class="container">
<h1>Add a product</h1>
  <%= simple_form_for(@product) do |f| %>
 <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category%>
      <%= f.input :price %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
